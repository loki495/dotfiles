#!/bin/bash

DIRNAME="${0%/*}"
source $DIRNAME/../bash/lib/common

check_mycnf

if [ -z "${MYSQL_FORCE_USER// }" ]
then
    FORCED_USER=""
else
    FORCED_USER="--user $MYSQL_USER"
fi

MYCNF_FULL_PATH="$MYCNF_PATH/.my.cnf.$MYSQL_DATABASE"

echo "Getting mysql backup"
OPTIONS="--defaults-file=$MYCNF_FULL_PATH --no-tablespaces --databases $MYSQL_DATABASE $FORCED_USER --default-character-set=utf8 --opt --single-transaction --routines --triggers --events --no-create-db --add-drop-table --complete-insert --tz-utc"

run_ssh mysqldump  $OPTIONS  | gzip -9 > $MYSQLDUMP_FILE
